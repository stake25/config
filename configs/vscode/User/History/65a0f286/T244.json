{
  "[json]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "cucumberautocomplete.steps": "**/support/step_definitions/*.ts",
  "cucumberautocomplete.strictGherkinCompletion": false,
  "cucumberautocomplete.syncfeatures": "**/integration/features/*.feature",
  "cypressHelper.commandForOpen": "npm run cypress:open-qa1 --",
  "cypressHelper.menuItems": {
    "FindCustomCommandReferences": true,
    "FindStepDefinitionReferences": true,
    "GenerateCustomCommandTypes": true,
    "GoToCustomCommand": true,
    "mockAutocomplete": false,
    "OpenCypress": true,
    "ParseHAR": false,
    "RunCypress": true,
    "SchemaGenerator": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": false,
  "editor.tabSize": 2,
  "files.eol": "\n",
  "files.exclude": {
    "**/node_modules": true
  },
  "editor.rulers": [100],
  "prettier.configPath": ".prettierrc.json",
  "[sql]": {
    "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
  }
}
