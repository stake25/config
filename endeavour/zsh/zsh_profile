# system aliases
alias rc='code ~/.zshrc'
alias profile='code ~/.zsh_profile'
alias src='source ~/.zshrc'
alias ll='ls -lah --color=auto'
alias ls='ls --color=auto'

# navigation
alias dev='cd ~/development; ranger'
alias nixos='cd /etc/nixos'
alias configs='cd ~/development/config'

# program aliases
alias n='code'
alias nconfig='cd ~/.config/nvim/ && nvim .'
alias lg='lazygit'
alias lzd='lazydocker'
alias ranger='ranger --choosedir=$HOME/.rangerdir; LASTDIR=`cat $HOME/.rangerdir`; cd "$LASTDIR"'
alias notes='code ~/syncthing/cloud/Notes'
alias repsrv='nohup env GDK_BACKEND=x11 LIBGL_ALWAYS_SOFTWARE=1 WEBKIT_DISABLE_COMPOSITING_MODE=1 /opt/cisco/secureclient/bin/vpnui &'
alias repsrvkill='sudo killall vpnagentd'

# ssh aliases
alias homelab='ssh 192.168.1.102'

